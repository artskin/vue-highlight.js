{
  "name": "vue-highlight.js",
  "version": "1.1.0",
  "description": "Highlight.js syntax highlighter component for Vue.",
  "main": "./dist/vue-highlight.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --config ./build/webpack.dev.config.js --open --hot --inline",
    "prebuild": "rimraf ./dist",
    "build": "run-p build:*",
    "build:min": "cross-env NODE_ENV=production webpack --config ./build/webpack.prod.config.js",
    "build:unmin": "cross-env NODE_ENV=production webpack --config ./build/webpack.dist.config.js",
    "lint": "eslint . --ext .js,.vue",
    "prepublishOnly": "npm test && npm run build",
    "test": "karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gluons/vue-highlight.js.git"
  },
  "keywords": [
    "vue",
    "vuejs",
    "vue-component",
    "highlight.js",
    "syntax",
    "highlight"
  ],
  "author": "Saran Tanpituckpong <sarunta@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gluons/vue-highlight.js/issues"
  },
  "homepage": "https://github.com/gluons/vue-highlight.js",
  "peerDependencies": {
    "highlight.js": "^9.11.0",
    "vue": "2"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.22.0",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "eslint": "^3.16.1",
    "eslint-config-gluons": "^2.0.1",
    "eslint-plugin-vue": "^2.0.1",
    "highlight.js": "^9.11.0",
    "jasmine": "^2.5.3",
    "jasmine-core": "^2.5.2",
    "karma": "^1.6.0",
    "karma-firefox-launcher": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-jasmine-matchers": "^3.7.0",
    "karma-spec-reporter": "^0.0.31",
    "karma-webpack": "^2.0.3",
    "npm-run-all": "^4.0.2",
    "rimraf": "^2.6.1",
    "style-loader": "^0.16.1",
    "vue": "2",
    "vue-loader": "^11.1.3",
    "vue-template-compiler": "^2.2.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "detect-indent": "^5.0.0",
    "redent": "^2.0.0"
  }
}
